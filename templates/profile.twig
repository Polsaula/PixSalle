{% extends "base.twig" %}

{% block title %}Profile{% endblock %}

{% block head %}
    <link rel="stylesheet" type="text/css" href="/assets/css/profile.css">
{% endblock %}

{% block content %}
    <section class="py-5 my-5">
        <div class="container">
            <h1 class="mb-5">Account Settings</h1>
            <div class="bg-white shadow rounded-lg d-block d-sm-flex">
                <div class="profile-tab-nav border-right">
                    <div class="p-4">
                        <div class="img-circle text-center mb-3">
                            <img src="{{ profilePic }}" alt="Image" class="shadow">
                        </div>
                        <h4 class="text-center">Pol Saula</h4>
                    </div>
                </div>
                <form class="tab-content p-4 p-md-5" action="/profile" method="post" enctype="multipart/form-data">
                    <div class="tab-pane fade show active" id="account" role="tabpanel" aria-labelledby="account-tab">
                        <h3 class="mb-4">Account Settings</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Username</label>
                                    <input type="text"
                                           class="form-control"
                                           value="user{{ id }}">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text"
                                           class="form-control"
                                           value="{{ email }}"
                                           disabled>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Phone number</label>
                                    <input type="text" class="form-control" value="+34 630224480">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label>Update Profile Picture</label>
                                <div>
                                    <input type="file" name="newProfilePic"  accept="image/png, image/jpg">
                                </div>
                            </div>
                        </div>
                        <div>
                            <button type="submit">Update</button>
                            <button>Cancel</button>
                        </div>
                        <br>
                        <a href="">Change Password </a>

                        <!-- Per comprovar coses -->
                        {% if errors['aux'] %}
                            <h5 style="color: #ff0000; width: 100%">{{ errors['aux'] }}</h5>
                        {% endif %}

                    </div>
                </form>

            </div>
        </div>
    </section>
{% endblock %}